# Serenity AI Environment Configuration
# Copy this file to .env and fill in your actual values

# Hugging Face API Configuration
# Get your free API key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Optional: Additional AI Service Configuration
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Voice Recognition Configuration
# GOOGLE_CLOUD_SPEECH_API_KEY=your_google_speech_api_key_here

# Database Configuration (if using database storage)
# DATABASE_URL=sqlite:///serenity.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=serenity.log

# Security Configuration
SECRET_KEY=your_secret_key_here_change_in_production

# Feature Flags
ENABLE_VOICE_INPUT=True
ENABLE_TEXT_TO_SPEECH=True
ENABLE_FACE_AUTH=False

# Audio Processing Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
MAX_AUDIO_DURATION=30

# Mental Health Resources
CRISIS_HOTLINE_US=988
CRISIS_HOTLINE_UK=116123
